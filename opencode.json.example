{
  "$schema": "https://opencode.ai/config.json",
  "plugin": ["opencode-withvibes"],

  "agents": {
    "default": {
      "model": "anthropic/claude-sonnet-4-5",
      "description": "Default agent with access to all skills",
      "tool": [
        "skills_zep_memory",
        "skills_skill_creator",
        "skills_template_skill",
        "remember",
        "recall"
      ]
    },

    "document-specialist": {
      "model": "anthropic/claude-sonnet-4-5",
      "description": "Specialized agent for document work (DOCX, XLSX, PPTX, PDF)",
      "systemPrompt": "{file:./prompts/document-specialist.txt}",
      "tool": [
        "skills_document_skills_xlsx",
        "skills_document_skills_docx",
        "skills_document_skills_pptx",
        "skills_document_skills_pdf",
        "skills_zep_memory",
        "remember",
        "recall"
      ],
      "permission": {
        "bash": "allow",
        "read": "allow",
        "write": "allow",
        "edit": "allow"
      }
    },

    "creative-designer": {
      "model": "anthropic/claude-sonnet-4-5",
      "description": "Agent for creative visual and algorithmic art",
      "systemPrompt": "{file:./prompts/creative-designer.txt}",
      "tool": [
        "skills_canvas_design",
        "skills_algorithmic_art",
        "skills_slack_gif_creator",
        "skills_theme_factory",
        "skills_artifacts_builder",
        "skills_zep_memory",
        "remember",
        "recall"
      ],
      "permission": {
        "bash": "allow",
        "read": "allow",
        "write": "allow"
      }
    },

    "code-builder": {
      "model": "anthropic/claude-sonnet-4-5",
      "description": "Developer agent for building MCP servers, testing webapps, and creating complex artifacts",
      "systemPrompt": "{file:./prompts/code-builder.txt}",
      "tool": [
        "skills_mcp_builder",
        "skills_webapp_testing",
        "skills_artifacts_builder",
        "skills_skill_creator",
        "skills_template_skill",
        "skills_zep_memory",
        "remember",
        "recall"
      ],
      "permission": {
        "bash": "allow",
        "read": "allow",
        "write": "allow",
        "edit": "allow",
        "webfetch": "allow"
      }
    },

    "communicator": {
      "model": "anthropic/claude-haiku-4-5",
      "description": "Agent for internal communications and branded content",
      "systemPrompt": "{file:./prompts/communicator.txt}",
      "tool": [
        "skills_internal_comms",
        "skills_brand_guidelines",
        "skills_theme_factory",
        "skills_zep_memory",
        "remember",
        "recall"
      ],
      "permission": {
        "bash": "deny",
        "read": "allow",
        "write": "allow"
      }
    },

    "memory-only": {
      "model": "anthropic/claude-haiku-4-5",
      "description": "Minimal agent with only memory capabilities",
      "systemPrompt": "{file:./prompts/memory-only.txt}",
      "tool": [
        "skills_zep_memory",
        "remember",
        "recall"
      ],
      "permission": {
        "bash": "deny",
        "read": "allow",
        "write": "deny"
      }
    },

    "full-access": {
      "model": "anthropic/claude-sonnet-4-5",
      "description": "Agent with access to ALL bundled skills",
      "systemPrompt": "{file:./prompts/full-access.txt}",
      "tool": [
        "skills_zep_memory",
        "skills_skill_creator",
        "skills_template_skill",
        "skills_mcp_builder",
        "skills_webapp_testing",
        "skills_document_skills_xlsx",
        "skills_document_skills_docx",
        "skills_document_skills_pptx",
        "skills_document_skills_pdf",
        "skills_canvas_design",
        "skills_algorithmic_art",
        "skills_slack_gif_creator",
        "skills_theme_factory",
        "skills_artifacts_builder",
        "skills_internal_comms",
        "skills_brand_guidelines",
        "remember",
        "recall"
      ],
      "permission": {
        "bash": "allow",
        "read": "allow",
        "write": "allow",
        "edit": "allow",
        "webfetch": "allow"
      }
    }
  },

  "permission": {
    "bash": "ask",
    "read": "allow",
    "write": "ask",
    "edit": "ask",
    "webfetch": "allow"
  }
}
