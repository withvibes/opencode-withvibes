{
  "$schema": "https://opencode.ai/config.json",
  "plugin": ["opencode-withvibes"],

  "agents": {
    "default": {
      "model": "anthropic/claude-sonnet-4-5",
      "description": "Default agent with access to all skills",
      "tool": [
        "skills_zep_memory",
        "skills_skill_creator",
        "skills_template_skill",
        "remember",
        "recall"
      ]
    },

    "fullstack": {
      "model": "anthropic/claude-sonnet-4-5",
      "description": "Full-stack TanStack development with testing and memory",
      "systemPrompt": "{file:./prompts/fullstack.md}",
      "tool": [
        "skills_zep_memory",
        "skills_webapp_testing",
        "skills_mcp_builder",
        "remember",
        "recall"
      ],
      "permission": {
        "bash": "allow",
        "read": "allow",
        "write": "allow",
        "edit": "allow"
      }
    },

    "designer": {
      "model": "anthropic/claude-sonnet-4-5",
      "description": "UI/UX specialist with visual design and theming",
      "systemPrompt": "{file:./prompts/designer.md}",
      "tool": [
        "skills_canvas_design",
        "skills_theme_factory",
        "skills_artifacts_builder",
        "skills_zep_memory",
        "remember",
        "recall"
      ],
      "permission": {
        "bash": "allow",
        "read": "allow",
        "write": "allow"
      }
    },

    "docs": {
      "model": "anthropic/claude-sonnet-4-5",
      "description": "Documentation and spreadsheet specialist",
      "systemPrompt": "{file:./prompts/docs.md}",
      "tool": [
        "skills_document_skills_xlsx",
        "skills_document_skills_docx",
        "skills_document_skills_pptx",
        "skills_document_skills_pdf",
        "skills_zep_memory",
        "remember",
        "recall"
      ],
      "permission": {
        "bash": "allow",
        "read": "allow",
        "write": "allow",
        "edit": "allow"
      }
    },

    "tester": {
      "model": "anthropic/claude-sonnet-4-5",
      "description": "Testing, linting, type checking, and code quality",
      "systemPrompt": "{file:./prompts/tester.md}",
      "tool": [
        "skills_webapp_testing",
        "skills_zep_memory",
        "remember",
        "recall"
      ],
      "permission": {
        "bash": "allow",
        "read": "allow",
        "write": "allow"
      }
    },

    "memory-expert": {
      "model": "anthropic/claude-sonnet-4-5",
      "description": "Advanced memory operations and context retrieval",
      "systemPrompt": "{file:./prompts/memory-expert.md}",
      "tool": [
        "skills_zep_memory",
        "remember",
        "recall"
      ],
      "permission": {
        "bash": "allow",
        "read": "allow",
        "write": "allow"
      }
    }
  },

  "permission": {
    "bash": "ask",
    "read": "allow",
    "write": "ask",
    "edit": "ask",
    "webfetch": "allow"
  }
}
